@page
@model Helpdesk.Pages.People.ImportFieldsModel
@{
    ViewData["Title"] = "Choose Fields To Import.";
}

<br />
<div class="text-center">
    <h1 class="display-4">Importing Users From CSV</h1>
</div>
<div class="broder container col-12" style="padding:30px;">
    <form method="post" class="row g-3">
        <div class="col-md-12">
            <span class="h3">Select Fields To Import</span>
        </div>
        <input type="hidden" asp-for="Input.TempFile" />
