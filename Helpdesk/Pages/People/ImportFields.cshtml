            <div class="form-floating">
                <select asp-for="Input.EmailField" class="form-control">
                    @foreach(var opt in Model.FieldNames)
                    {
                        if (@opt == @Model.Input.EmailField)
                        {
                            <option value="@opt" selected>@opt</option>
                        }
                        else
                        {
                            <option value="@opt">@opt</option>
                        }
                    }
                </select>
                <label asp-for="Input.EmailField" class="form-label"></label>
                <span asp-validation-for="Input.EmailField" class="text-danger"></span>
            </div>
        </div>
